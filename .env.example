# JWT Secret - Generate a strong random string (min 32 characters)
JWT_SECRET=your-super-secure-256-bit-secret-key-that-is-at-least-32-chars-long
PORT=8000

# Database Configuration (Local Supabase)
# For local development, this connects to Supabase local instance
DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:54322/postgres

# Supabase Configuration (Local Development)
# Run 'supabase start' to get these values for local development
SUPABASE_URL=http://127.0.0.1:54321
SUPABASE_PUBLISHABLE_KEY=sb_publishable_your-local-publishable-key
SUPABASE_SECRET_KEY=sb_secret_your-local-secret-key

# Supabase Local Keys (Alternative format - use either PUBLISHABLE/SECRET or ANON/SERVICE_ROLE)
POSTGRES_PASSWORD=postgres
ANON_KEY=your-local-anon-key-will-be-provided-by-supabase-start
SERVICE_ROLE_KEY=your-local-service-role-key-will-be-provided-by-supabase-start

# Redis Configuration (Docker container)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=""

# Chatbot Configuration
# Get these API keys from respective platforms
GROQ_API_KEY=gsk_your-groq-api-key-here
PINECONE_API_KEY=pcsk_your-pinecone-api-key-here
PINECONE_INDEX_NAME=your-index-name
HUGGINGFACE_TOKEN=hf_your-huggingface-token-here

# Email Configuration
# Use Gmail SMTP or your email provider
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-app-specific-password
APP_NAME=Anant Enterprises Dev

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
FRONTEND_URL=http://localhost:3000


RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your_test_key_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret