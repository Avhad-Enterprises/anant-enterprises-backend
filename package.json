{
  "name": "anant-enterprises-backend",
  "version": "1.0.0",
  "description": "Anant Enterprises Backend - REST API with TypeScript, Drizzle ORM, PostgreSQL, and Authentication",
  "main": "build/server.js",
  "scripts": {
    "main": "npm run build && cross-env NODE_ENV=production node build/server.js",
    "start": "cross-env NODE_ENV=production node build/server.js",
    "dev": "cross-env NODE_ENV=development nodemon",
    "build": "tsc --project tsconfig.src.json",
    "build:all": "tsc",
    "build:watch": "tsc --watch --project tsconfig.src.json",
    "clean": "rimraf build",
    "type-check": "tsc --noEmit",
    "test": "jest --forceExit --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:unit": "jest --testMatch='**/*.test.ts' --testPathIgnorePatterns='/integration/' --forceExit --detectOpenHandles",
    "test:integration": "jest --testMatch='**/integration/**/*.test.ts' --forceExit --detectOpenHandles",
    "test:coverage": "jest --coverage --forceExit --detectOpenHandles",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "ci": "npm run lint && npm run type-check && npm run test:coverage",
    "docker:dev": "docker compose -f docker/compose.dev.yaml up --build",
    "docker:dev:down": "docker compose -f docker/compose.dev.yaml down",
    "docker:dev:clean": "docker compose -f docker/compose.dev.yaml down -v",
    "docker:prod": "docker compose -f docker/compose.prod.yaml up --build -d",
    "docker:prod:down": "docker compose -f docker/compose.prod.yaml down",
    "docker:build": "docker build -f docker/Dockerfile -t anant-enterprises-backend --target production .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "ts-node src/database/migrate.ts",
    "db:migrate:dev": "cross-env NODE_ENV=development ts-node src/database/migrate.ts",
    "db:migrate:test": "cross-env NODE_ENV=test ts-node src/database/migrate.ts",
    "db:migrate:prod": "cross-env NODE_ENV=production ts-node src/database/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:push:dev": "cross-env NODE_ENV=development drizzle-kit push",
    "db:push:test": "cross-env NODE_ENV=test drizzle-kit push",
    "db:push:prod": "cross-env NODE_ENV=production drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:studio:dev": "cross-env NODE_ENV=development drizzle-kit studio",
    "db:studio:test": "cross-env NODE_ENV=test drizzle-kit studio",
    "db:seed": "ts-node src/database/seed.ts",
    "db:clean": "ts-node scripts/db-clean.ts",
    "db:drop": "ts-node scripts/db-reset.ts",
    "db:drop:supabase": "supabase db reset",
    "db:drop:migrations": "drizzle-kit drop",
    "db:test": "ts-node src/database/health.ts",
    "db:test:prod": "cross-env NODE_ENV=production ts-node src/database/health.ts",
    "db:check": "drizzle-kit check",
    "db:up": "drizzle-kit up",
    "db:reset": "ts-node scripts/db-reset.ts && npm run db:generate && npm run db:migrate",
    "db:fresh": "npm run clean && npm run db:reset",
    "create-admin": "tsx scripts/create-admin.ts",
    "create-test-users": "tsx scripts/create-test-users.ts",
    "db:seed:ecommerce": "tsx scripts/seed-ecommerce-data.ts",
    "db:seed:notifications": "ts-node scripts/seed-notification-templates.ts",
    "db:seed:all": "npm run db:seed && npm run db:seed:ecommerce",
    "pre-commit": "lint-staged"
  },
  "keywords": [
    "express",
    "backend",
    "template",
    "typescript",
    "api",
    "drizzle-orm",
    "postgresql",
    "authentication"
  ],
  "author": "Harshal Patil",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@ai-sdk/groq": "^2.0.34",
    "@huggingface/inference": "^4.13.4",
    "@pinecone-database/pinecone": "^6.1.3",
    "@supabase/supabase-js": "^2.89.0",
    "@types/socket.io": "^3.0.1",
    "ai": "^5.0.117",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.66.4",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.45.1",
    "envalid": "^8.0.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.0.0",
    "hpp": "^0.2.3",
    "isomorphic-dompurify": "^2.35.0",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.3",
    "mammoth": "^1.11.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.12",
    "pdfjs-dist": "^5.4.530",
    "pg": "^8.16.3",
    "rate-limit-redis": "^4.3.1",
    "razorpay": "^2.9.6",
    "redis": "^5.10.0",
    "socket.io": "^4.8.3",
    "uuid": "^13.0.0",
    "vitest": "^4.0.17",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.3.2"
  },
  "devDependencies": {
    "@swc/core": "^1.15.8",
    "@swc/jest": "^0.2.36",
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/dompurify": "^3.0.5",
    "@types/express": "^5.0.0",
    "@types/hpp": "^0.2.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.0.10",
    "@types/nodemailer": "^7.0.3",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "cross-env": "^10.0.0",
    "drizzle-kit": "^0.31.6",
    "eslint": "^9.30.1",
    "globals": "^16.3.0",
    "jest": "^30.1.3",
    "lint-staged": "^16.1.6",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.51.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "overrides": {
    "glob": "^10.4.5",
    "test-exclude": "^7.0.1",
    "esbuild": "^0.25.0"
  }
}
